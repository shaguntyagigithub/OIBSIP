import pandas as pd
import matplotlib.pyplot as plt
import seaborn as sns
# Load the dataset
data = pd.read_csv(r"C:\Users\A1\Desktop\Unemployment in India.csv")
print(data.info())
print(data.head())
data[' Date'] = pd.to_datetime(data[' Date'], dayfirst=True)
data = data.drop([' Frequency', ' Estimated Employed', ' Estimated Labour Participation Rate (%)', 'Area'], axis=1)
avg_unemployment = data.groupby(' Date')[' Estimated Unemployment Rate (%)'].mean().reset_index()
print(avg_unemployment)
sns.set(style="whitegrid")
plt.figure(figsize=(10, 6))
sns.lineplot(x=' Date', y=' Estimated Unemployment Rate (%)', data=avg_unemployment)
plt.title('Average Unemployment Rate Over Time')
plt.xlabel('Date')
plt.ylabel('Estimated Unemployment Rate (%)')
plt.xticks(rotation=45)
plt.tight_layout()
plt.show()
avg_unemployment_region = data.groupby('Region')[' Estimated Unemployment Rate (%)'].mean().reset_index()
plt.figure(figsize=(10, 6))
sns.barplot(x='Region', y='Estimated Unemployment Rate (%)', data=avg_unemployment_region)
plt.title('Average Unemployment Rate by Region')
plt.xlabel('Region')
plt.ylabel('Estimated Unemployment Rate (%)')
plt.xticks(rotation=45)
plt.tight_layout()
plt.show()
